datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Stage {
  pregnant
  postpartum
  childcare
}

enum BabyGender {
  male
  female
  unknown
}

model User {
  id             Int              @id @default(autoincrement())
  fullName       String
  email          String           @unique
  password       String
  createdAt      DateTime         @default(now()) @db.Timestamptz(6)
  updatedAt      DateTime         @updatedAt @db.Timestamptz(6)
  profilePic     String?
  MotherProfiles MotherProfiles[]
  PlannerTask    PlannerTask[]
  HealthLog      HealthLog[]
  HealthMetrics  HealthMetric[]
  HealthMoods    HealthMood[]
  HealthSymptoms HealthSymptom[]
  ToolsLog       ToolsLog[]
  JournalEntry   JournalEntry[]
  refreshTokens  RefreshToken[]
  BabyMetric     BabyMetric[]
  Albums         Album[]

  @@map("user")
}

model MotherProfiles {
  id              Int         @id @default(autoincrement())
  mother          User        @relation(fields: [motherId], references: [id], onDelete: Cascade)
  motherId        Int
  babyName        String?
  lmpDate         DateTime?
  weeksPregnant   Int?
  weeksPostpartum Int?
  babyAgeMonths   Int?
  createdAt       DateTime    @default(now()) @db.Timestamptz(6)
  stage           Stage
  babyGender      BabyGender?

  @@index([motherId], name: "idx_mother_profiles_user_id")
  @@map("mother_profiles")
}

model PlannerTask {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int
  title       String
  description String
  date        DateTime @db.Timestamptz(6)
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now()) @db.Timestamptz(6)

  @@index([userId], name: "idx_planner_task_user_id")
  @@index([date], name: "idx_planner_task_date")
  @@map("planner_task")
}

model HealthLog {
  id            Int      @id @default(autoincrement())
  mother        User     @relation(fields: [motherId], references: [id], onDelete: Cascade)
  motherId      Int
  date          DateTime @db.Date
  weight        Float?
  bloodPressure String?
  heartRate     Int?
  mood          String?
  sleepHours    Float?
  waterIntake   Float?
  symptoms      String?
  notes         String?
  createdAt     DateTime @default(now()) @db.Timestamptz(6)

  @@index([motherId, date], name: "idx_health_logs_mother_date")
  @@map("health_logs")
}

model ToolsLog {
  id        Int      @id @default(autoincrement())
  mother    User     @relation(fields: [motherId], references: [id], onDelete: Cascade)
  motherId  Int
  type      String
  data      Json?
  createdAt DateTime @default(now()) @db.Timestamptz(6)

  @@index([motherId], name: "idx_tools_logs_mother_id")
  @@index([type], name: "idx_tools_logs_type")
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  category  String?
  trimester String?
  author    String
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)

  @@index([category], name: "idx_articles_category")
  @@map("articles")
}

model JournalEntry {
  id          Int      @id @default(autoincrement())
  mother      User     @relation(fields: [motherId], references: [id], onDelete: Cascade)
  motherId    Int
  title       String
  content     String
  photoUrl    String?
  tags        String[] @default([])
  mood        String?
  createdAt   DateTime @default(now()) @db.Timestamptz(6)
  lastUpdated DateTime @updatedAt @db.Timestamptz(6)

  @@index([motherId], name: "idx_journal_entries_mother_id")
  @@map("journal_entries")
}

model HealthMetric {
  id        Int      @id @default(autoincrement())
  mother    User     @relation(fields: [motherId], references: [id], onDelete: Cascade)
  motherId  Int
  title     String
  value     String
  unit      String?
  change    String?
  trend     String?
  color     String?
  category  String?
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)

  @@index([motherId], name: "idx_health_metrics_mother_id")
  @@map("health_metrics")
}

model HealthMood {
  id        Int      @id @default(autoincrement())
  mother    User     @relation(fields: [motherId], references: [id], onDelete: Cascade)
  motherId  Int
  mood      String
  notes     String?
  createdAt DateTime @default(now()) @db.Timestamptz(6)

  @@index([motherId], name: "idx_health_moods_mother_id")
  @@map("health_moods")
}

model HealthSymptom {
  id        Int      @id @default(autoincrement())
  mother    User     @relation(fields: [motherId], references: [id], onDelete: Cascade)
  motherId  Int
  name      String
  severity  String   @default("low")
  notes     String?
  resolved  Boolean  @default(false)
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)

  @@index([motherId], name: "idx_health_symptoms_mother_id")
  @@map("health_symptoms")
}

model BabyMetric {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  title     String
  value     String
  unit      String?
  notes     String?
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)

  @@index([userId], name: "idx_baby_metrics_user_id")
  @@map("baby_metrics")
}

model Album {
  id          Int      @id @default(autoincrement())
  mother      User     @relation(fields: [motherId], references: [id], onDelete: Cascade)
  motherId    Int
  title       String
  coverPhoto  String?
  description String?
  createdAt   DateTime @default(now()) @db.Timestamptz(6)
  lastUpdated DateTime @updatedAt @db.Timestamptz(6)
  photos      Photo[]

  @@index([motherId], name: "idx_albums_mother_id")
  @@map("albums")
}

model Photo {
  id         Int      @id @default(autoincrement())
  album      Album    @relation(fields: [albumId], references: [id], onDelete: Cascade)
  albumId    Int
  fileUrl    String
  name       String?
  notes      String?
  createdAt  DateTime @default(now()) @db.Timestamptz(6)
  uploadedAt DateTime @default(now()) @db.Timestamptz(6)

  @@index([albumId], name: "idx_photos_album_id")
  @@map("photos")
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now()) @db.Timestamptz(6)

  @@index([userId], name: "idx_refresh_tokens_user_id")
  @@map("refresh_tokens")
}