datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id             Int              @id @default(autoincrement())
    fullName       String
    email          String           @unique
    password       String
    createdAt      DateTime
    updatedAt      DateTime
    MotherProfiles MotherProfiles[]
}

model MotherProfiles {
    id             Int      @id @default(autoincrement())
    mother         User     @relation(fields: [motherId], references: [id])
    motherId       Int
    stage          String
    babyName       String?
    babyGender     String?
    lmpDate        DateTime
    weeksPregnant  Int
    weeksPostpartu Int
    babyAgeMonths  Int
    createdAt      DateTime
}
